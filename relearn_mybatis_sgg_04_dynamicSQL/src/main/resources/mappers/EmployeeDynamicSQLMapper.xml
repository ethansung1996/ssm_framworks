    <insert id="batchInsertEmpsByMysql" parameterType="Employee">
        <foreach collection="employeeList" item="emp" separator=";" close=";">
            insert into
            tbl_employee(last_name, email, gender, dept_id)
            VALUES
            (#{emp.lastName},#{emp.email},#{emp.gender},#{emp.dept.id})
        </foreach>
    </insert>

</mapper>